{% block categories %}
    <div class="section categories">
        <div class="well well-lg">
            <p>
                {{ 'post.category.filter.title'|trans }}
            </p>
            <ul class="list-unstyled">
                <li>
                    <a href="{{ path('blog_index') }}">
                        {{ 'post.category.filter.all.title'|trans }}
                    </a>
                </li>
                {% for category in categories %}
                    <li>
                        <a href="{{ path('blog_by_category', {'id': category.id}) }}">
                            {{ category.name }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}